                            .c-tabs-list__item
                                a.c-tab-item(href="#") от РДЦ
                            .c-tabs-list__item
                                a.c-tab-item(href="#") Новости арендаторов
                            .c-tabs-list__item
                                a.c-tab-item(href="#") СМИ о нас
            .row.c-card-news-list
                .col-12.col-md-6.c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
