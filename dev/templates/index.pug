extends ../pug/layout
append content
    .container
        .c-section.c-section_lg
            .c-section__header
                .row.c-slider-header
                    .col-6.col-md-12.c-slider-header__title Новости
                    .col-6.col-md-2.c-slider-header__nav
                        .c-slider-nav
                            .c-slider-nav__item
                                button.c-btn-ico.c-btn-ico_md.c-btn-ico_color-primary.c-btn-ico_prev
                                    +svgSprite({name: 'arrow', className: 'c-btn-ico__icon', width: 17, height: 12})
                            .c-slider-nav__item
                                button.c-btn-ico.c-btn-ico_md.c-btn-ico_color-primary
                                    +svgSprite({name: 'arrow', className: 'c-btn-ico__icon', width: 17, height: 12})
                    .col-12.col-md-10.c-slider-header__tabs
                        .c-tabs-list
                            .c-tabs-list__item
