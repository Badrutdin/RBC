extends ../pug/layout
append content
    .c-section.c-section_lg.c-section_banner(style='background-image:url(images/main-banner.jpg)')
        .container
            .c-banner-content
                h1.c-banner-content__title
                    span.c-banner-content__title_small
                        | Это –
                        br
                    | офисный центр
                    br
                    | класса А в Самаре
                .c-banner-content__controls
                    a.c-btn.c-btn_size-lg.c-btn_color-primary.c-btn_style-default.c-btn_style-bold-upper.c-btn_section-control(href='#') о центре
                .d-none.d-lg-block.c-banner-content__desc Сочетание современного дизайна, эффективных инженерных решений, комфортной среды и профессионального сервиса
                .c-banner-content__footer
                    .c-action-card
                        .c-action-card__body
                            .c-action-card__content Аренда офисов от 500 руб./м2
    .c-section.c-section_lg
        .container
            .c-section__header
                +sliderHeader({title: 'Новости', tabListItems: models.tabListModel})
        .slider-container
            .c-card-news-list.slider(data-slider='news-main-page')
                .c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
                .c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
                .c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
                .c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
                .c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
                .c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
                .c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
                .c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
                .c-card-news-list__item
                    +newsCardPrimary(models.newsCardModel)
        .container
            .c-section__footer
                a.c-btn.c-btn_size-lg.c-btn_color-primary.c-btn_style-default.c-btn_style-bold-upper.c-btn_section-control(href='#') посмотреть все новости
    .c-card-section(style="background-image:url(images/bg-arenda.jpg)")
        +actionCard({text: 'Аренда офисов <br> от 10 м2 до 1350 м <sup>2</sup>', btnText: 'выбрать сейчас'})
    .c-section.c-section_lg
        .container
            .c-section__header Сервис
            .row.c-card-link-list
                .col-12.col-md-6.col-lg-4.c-card-link-list__item
                    +cardLink(models.cardLinkModel)
                .col-12.col-md-6.col-lg-4.c-card-link-list__item
                    +cardLink(models.cardLinkModel)
                .col-12.col-md-6.col-lg-4.c-card-link-list__item
                    +cardLink(models.cardLinkModel)
                .col-12.col-md-6.col-lg-4.c-card-link-list__item
                    +cardLink(models.cardLinkModel)
                .col-12.col-md-6.col-lg-4.c-card-link-list__item
                    +cardLink(models.cardLinkModel)
                .col-12.col-md-6.col-lg-4.c-card-link-list__item
                    +cardLink(models.cardLinkModel)
            .c-section__footer
                a.c-btn.c-btn_size-lg.c-btn_color-primary.c-btn_style-default.c-btn_style-bold-upper.c-btn_section-control(href='#') Подробнее о сервисе

